<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.propertyanimsecdemo.LandscapeActivity"
    tools:ignore="MergeRootFrame" >
    
        <com.example.propertyanimsecdemo.LandscapeBezierCurveView
        android:id="@+id/bezierView"        
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    
    <Button
        android:id="@+id/button1"        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="送花" />       
    
    <ImageView 
        android:id="@+id/flower"
        android:visibility="gone"
        android:src="@drawable/icon_xiao_hua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <ImageView 
        android:id="@+id/number_im"
        android:visibility="gone"
        android:src="@drawable/lus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    
    
    
    </FrameLayout>

